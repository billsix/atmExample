<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.billsix.examples.atm.domain" default-access="field">    
    <class name="Account">  
        <id name="id">
            <generator class="native"/>
        </id>
        <version name="version" type="long"/>            
        <property name="username"/>
        <property name="password"/>
        <property name="currentBalance"/>
        <set name="transactionHistory" inverse="true" cascade="all">
            <key column="ACCOUNT_ID"/>
            <one-to-many class="AccountTransaction"/>
        </set>        
    </class>        
    <class name="AccountTransaction" >
        <id name="id">
            <generator class="native"/>
        </id>
        <version name="version" type="long"/>
        <property name="date"/>
        <property name="balanceBeforeTransaction"/>
        <property name="balanceAfterTransaction"/>
        <many-to-one name="account" class="Account" column="ACCOUNT_ID" cascade="all" not-null="true" />
    </class>        
</hibernate-mapping>
